{
  "metadata": [
    {
      "src": [
        {
          "src": "../.",
          "files": [
            "**/*.csproj"
          ],
          "exclude": [
            "**/obj/**",
            "**/bin/**",
            "**/MyHaikus/**"
          ]
        }
      ],
      "dest": "api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "Haiku.API/wwwroot/images/**"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern"
    ],
    "globalMetadata": {
      "_appName": "Haiku.API.Documentation",
      "_appTitle": "Haiku.API.Documentation",
      "_enableSearch": true,
      "pdf": true
    }
  }
}